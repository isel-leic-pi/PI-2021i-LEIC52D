<h3>Username: {{username}}</h3>
<div class="messages">
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th colspan="2">
            Favourite artists:
        </th>
    </tr>
    {{#each artists}}   <!-- artists is an Array of Strings -->
        <!-- 
            current element of iteration 
        -->
        <!-- <p class="artistItem">{{.}}</p>  -->
        <tr class="artistItem">
            <td class="artistName">{{.}}</td>
            <td><button class="btn btn-danger">Delete</button></td>
        </tr>
    {{/each}}    
</table>
<form method="POST"> <!-- By default the request is made to the origin URL -->
    <div class="form-group">
        <label>Artist:</label>
        <input type="text" name="artist">
        <input type="submit">
    </div>
</form>